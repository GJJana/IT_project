@using AnimalTinder.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<div class="row">
    <div>
        <section id="loginForm">
            <div style="display: flex;
        align-items: center;
        justify-content: center;">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-horizontal", style = "margin-top: 40px; max-width: 35%;  border-color: #00000040; border: solid; padding:40px;   display: flex;    flex-direction: column;" }))
                {
                    @Html.AntiForgeryToken()

                    <div style="display: flex; flex-direction: column; align-items: center;">
                        <div style="margin-bottom: 20px; ">
                            <h2> Log in </h2>
                            <hr />
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div style="margin-bottom: 20px">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div style="margin-bottom: 20px">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-info btn-block my-4" />
                        </div>

                    </div>

                    <div class="d-flex justify-content-around">
                        <div>
                            <!-- Remember me -->
                            <div class="custom-control custom-checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                            </div>
                        </div>
                        <div>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")

                        </div>
                    </div>
                    <div class="form-group">

                    </div>
                    <p>
                        @Html.ActionLink("Register as a new user", "Register")
                    </p>
                }

            </div>
        </section>
        <div style="margin-bottom:20px">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>



        <!--<div class="col-md-4">
            
        </div>-->
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }