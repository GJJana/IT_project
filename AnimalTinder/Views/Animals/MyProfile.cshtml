@model AnimalTinder.Models.Animal

@{
    ViewBag.Title = "MyProfile";
}

<style>
    .edit-btn {
        float: right;
    }

    @@media only screen and (max-width: 992px) {
        .card-img-top {
            object-fit: contain;
        }
    }
</style>

<div class="container-fluid" style="padding-left: 0px; padding-right: 0px;">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12"
             style="
            height: auto;
            padding-top: 50px;
            max-width: 450px;
            padding-bottom: 50px;
          ">
            <img style="
              z-index: 10;
              position: relative;
              margin-left: auto;
              display: block;
              margin-right: auto;
              object-fit: cover;
              border-radius: 50%;
              height: 150px;
              width: 150px;
            "
                 src="@Model.ImgURL"
                 alt="Card image cap" />

            <div class="card"
                 style="
              margin-top: -70px;
              padding: 40px;
              padding-top: 110px;
              background-color: #eab579;
            ">
                <div class="card-body my-profile">
                    <h3 class="card-title text-center" style="color: #186860; font-weight: 700; margin-bottom: 30px;">
                        @Html.DisplayFor(model => model.Name) the @Html.DisplayFor(model => model.Breed)
                    </h3>
                    <p class="card-text" style="font-size: 14px; color: #186860; margin-bottom: 30px;">
                        <b>Type: </b> @Html.DisplayFor(model => model.Type) <br />
                        <b>Age: </b>  @Html.DisplayFor(model => model.Age) <br />

                        <b>Gender: </b> @Html.DisplayFor(model => model.Gender) <br />
                        <b>Location: </b> @Html.DisplayFor(model => model.Location) <br />
                        <b>Email: </b> @Html.DisplayFor(model => model.Email) <br />
                    </p>
                    <div style="display: flex; justify-content: center; ">
                        @Html.ActionLink("Edit", "Edit", "Animals", new { id = Model.ID }, new { @class = "btn btn-default edit-btn" })
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-8 col-md-6 col-sm-12"
             style="
            height: auto;
            padding-right: 30px;
            padding-top: 35px;
            padding-bottom: 50px;
          ">
            <h3 style="padding-left: 30px; font-weight: 700">
                Liked Animals
            </h3>
            <div class="row" style="margin-top: 47px">
                @foreach (AnimalTinder.Models.Animal item in @ViewBag.LikedAnimalsProfile)
                 {
                    <div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-4" style="display: flex; justify-content: center">

                        <div class="card" style="background-color: #82c5ce; max-width: 300px;">
                            <div class="view overlay" style="background-color: white;">
                                <img class="card-img-top"
                                     style="width: 100%; max-height: 200px;"
                                     src="@item.ImgURL"
                                     alt="Card image cap" />
                                
                                    <div class="mask rgba-white-slight"></div>
                                
                            </div>

                            <div class="card-body rounded-bottom" style="padding: 20px; background-color: #fff;">
                                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name) the @Html.DisplayFor(modelItem => item.Breed)</h4>
                                <hr class="hr">
                                <p class="card-text mb-4" style="font-size: 14px">
                                    @Html.DisplayFor(modelItem => item.Description) <br />
                                    <b>Type: </b> @Html.DisplayFor(modelItem => item.Type) <br />
                                    <b>Age: </b>  @Html.DisplayFor(modelItem => item.Age) <br />

                                    <b>Gender: </b> @Html.DisplayFor(modelItem => item.Gender) <br />
                                    <b>Location: </b> @Html.DisplayFor(modelItem => item.Location) <br />
                                    <b>Email: </b> @Html.DisplayFor(modelItem => item.Email) <br />
                                </p>
                                <div style="display: flex; align-items: center; justify-content: space-between;">
                                    <a href="#!" style="display: none;">
                                        <h5 style="display: inline-block;">
                                            @Html.ActionLink("Delete", "DeleteLiked", "Animals", new { id = item.ID }, new { @class = "btn btn-outline-default" })
                                        </h5>
                                        <h5 style="display: inline-block;">
                                            @Html.ActionLink("Details", "Details", "Animals", new { id = item.ID }, new { @class = "btn btn-default" })
                                        </h5>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                 }
            </div>
        </div>
    </div>

</div>
